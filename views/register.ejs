<Link  rel="stylesheet" href="https://fonts.googleapis.com/css?family=Quicksand:100,300,500"/>
<Link href="/assets/css/register.css" rel="stylesheet" type="text/css"/>
<div class="register-full-screen-container">
    <div class="register-container">
        <h1 class="reg-title">Register</h1>
        <form action='/register' method="POST">
            <div class="reg-input">
                <label for="name">Name</label>
                <input type="text" id="name" name="name"
                required>
            </div>
            <div class="reg-input">
                <label for="email">Email</label>
                <input type="email" id="email" name="email"
                required>
            </div>
            <div class="reg-input">
                <label for="pasword">Password</label>
                <input type="password" id="password" name="password"
                required>
            </div>
            <button type="submit" class="reg-submit">Register</button>
        </form>
        <a href="/login" class="link-to-login">Login</a>
    </div>
</div>